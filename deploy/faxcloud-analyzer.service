[Unit]
Description=FaxCloud Analyzer (FastAPI)
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/faxcloud-analyzer
Environment="PATH=%h/faxcloud-analyzer/.venv/bin"
ExecStart=%h/faxcloud-analyzer/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=on-failure
User=%i

[Install]
WantedBy=multi-user.target
